//Find Closest Number to Zero
import java.util.*;
import java.math.*;
class Solution {
    public int findClosestNumber(int[] nums) {
        Scanner sc=new Scanner(System.in);
        int c=nums[0];
        for(int i=0;i<nums.length;i++)
        {
            if(Math.abs(nums[i])<Math.abs(c)||Math.abs(nums[i])==Math.abs(c)&&nums[i]>c)
            {
                c=nums[i];

            }
           
        }
        return c;
    }
}



